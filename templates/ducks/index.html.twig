{% extends 'base.html.twig' %}

{% block title %}Hello DucksController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">

    {% for duck in ducks %}
        <tr>
        <tr>
            <th>Firstname:</th>
            <td>{{ duck.firstname }}</td>
        </tr>
        <tr>
            <th>Duckname:</th>
            <td>{{ duck.duckname }}</td>
        </tr>
        <tr>
            <th>Email:</th>
            <td>{{ duck.email }}</td>
        </tr>

            <td>
                <a href="{{ path('duck_show', {'id': duck.id}) }}">show</a>
                <a href="{{ path('duck_edit', {'id': duck.id}) }}">edit</a>
            </td>
        </tr>
        <br>
    {% else %}
        <tr>
            <td colspan="4">no records found</td>
        </tr>
    {% endfor %}
    <a href="{{ path('app_register') }}">register</a>
</div>
{% endblock %}
